# Server listen port
PORT=8080

# Directories (absolute paths recommended in production)
JOB_DIR="/tmp/opsbay_jobs"
RESULT_DIR="/tmp/opsbay_results"
LOG_DIR="/tmp/opsbay_logs"

# Shared secret for HMAC (use a long random string)
SECRET="CHANGE_ME_TO_A_LONG_RANDOM_VALUE"

# Comma-separated allowed nodes (IDs used by workers), e.g. "node1,node2,macbook-01"
ALLOWED_NODES="node1,node2"

# Clock skew tolerance (seconds) for replay protection
MAX_SKEW=300

# Enable logging of node information from worker headers (true/false)
LOG_NODE_INFO=false
